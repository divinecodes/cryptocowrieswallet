<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:padding="2dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/setup_account"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/passphrase_info"
        android:layout_margin="5dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:drawableStart="@drawable/ic_info_white_24dp"
        android:drawablePadding="5dp"
        android:textSize="12sp"/>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColorHint="@color/colorWhite">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_passphrase1"
            android:inputType="textPassword"
            android:textColorHint="@android:color/white"
            android:textColorHighlight="@android:color/white"
            android:shadowColor="@android:color/white"
            android:textColor="@android:color/white"
            android:hint="@string/passphrase_label_1"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColorHint="@color/colorWhite">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_passphrase2"
            android:inputType="textPassword"
            android:textColorHint="@android:color/white"
            android:textColorHighlight="@android:color/white"
            android:shadowColor="@android:color/white"
            android:textColor="@android:color/white"
            android:hint="@string/passphrase_label_2"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setup_account"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:padding="2dp"
        android:elevation="2dp"
        android:id="@+id/setup_crypto_account"
        android:layout_margin="5dp"
        />

</LinearLayout>
