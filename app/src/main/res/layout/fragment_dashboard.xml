<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ultimustech.cryptowallet.views.fragments.DashboardFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideOverlay">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="3dp">
                <include
                    layout="@layout/dashboard_top_view"
                    />

                <Button
                    android:id="@+id/button_receive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="212dp"
                    android:background="@color/colorPrimary"
                    android:drawableEnd="@drawable/ic_transaction_received_white_24dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="serif-monospace"
                    android:padding="5dp"
                    android:text="@string/buy_ccw"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="212dp"
                    android:background="@color/colorPrimary"
                    android:drawableEnd="@drawable/ic_transaction_send_white_24dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="serif-monospace"
                    android:padding="5dp"
                    android:text="@string/send_transactions"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.467"
                    app:layout_constraintStart_toEndOf="@+id/button_receive"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="10dp"
                android:padding="3dp"
                app:cardCornerRadius="2dp"
                app:contentPadding="10dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/transaction_label"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        />
                    <include
                        layout="@layout/app_divider_horizontal"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/transaction_type_label"
                            android:textAllCaps="true"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimaryText"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif"
                            android:layout_marginEnd="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/transaction_type"
                            android:textAllCaps="true"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace"
                            android:id="@+id/transaction_type"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/transaction_account_label"
                            android:textAllCaps="true"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimaryText"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif"
                            android:id="@+id/transaction_account"
                            android:layout_marginEnd="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_account_hash"
                            android:textAllCaps="true"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace"
                            android:id="@+id/transaction_account_hash"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/transaction_amount_label"
                            android:textAllCaps="true"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimaryText"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif"
                            android:layout_marginEnd="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/account_balance"
                            android:textAllCaps="true"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace"
                            android:id="@+id/transaction_amount"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/transaction_date_label"
                            android:textAllCaps="true"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimaryText"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif"
                            android:layout_marginEnd="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_date"
                            android:textAllCaps="true"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace"
                            android:id="@+id/transaction_date"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="10dp"
                android:padding="3dp"
                app:cardCornerRadius="2dp"
                app:contentPadding="10dp"
                app:cardElevation="2dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="horizontal"
                       android:layout_gravity="center_horizontal"
                       android:gravity="center_horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/exchange_rate"
                           android:textAllCaps="true"
                           android:textSize="16sp"
                           android:layout_gravity="center_horizontal"
                           android:gravity="center_horizontal"
                           android:textColor="@color/colorPrimaryDark"
                           android:textStyle="bold"
                           android:layout_marginEnd="20dp"
                           android:fontFamily="sans-serif-condensed"
                           />
                       <Spinner
                           android:id="@+id/exchange_rate_duration"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="sans-serif-condensed"
                           android:textAllCaps="true"
                           android:textColor="@color/colorPrimaryDark"
                           android:textSize="12sp"
                           android:textStyle="bold" />
                   </LinearLayout>
               </LinearLayout>
           </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="10dp"
                android:padding="3dp"
                app:cardCornerRadius="2dp"
                app:contentPadding="10dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CRYPTOCURRENCIES"
                            android:textAllCaps="true"
                            android:textSize="16sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="sans-serif-condensed"
                            />
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/coinbase_exchanges"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
